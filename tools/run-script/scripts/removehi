#!/bin/sh

# remove package

[ -n "$1" ] || { echo "Error: Run with package name as param" ; exit 1 ; }

echo "Run remove $@ script on `distr_vendor`"
DISTRVENDOR=`/usr/bin/distr_vendor -d`

[ "$DISTVENDOR" = "ALTLinux" ] && exit 1

cd /tmp

case $DISTRVENDOR in
	"ALTLinux"|"Ubuntu"|"Debian"|"PCLinux")
		CMD="apt-get -y --force-yes remove"
		;;
	"LinuxXP"|"Fedora"|"ASPLinux"|"CentOS"|"RHEL"|"Scientific")
		CMD="yum -y remove"
		;;
	"Mandriva")
		CMD="urpme --auto"
		;;
	"SUSE")
		CMD="zypper --non-interactive remove"
		;;
	*)
		RET=1
		CMD="echo \"Do not known install command for DISTRVENDOR $DISTRVENDOR\""
		;;
esac

echo "\$ $CMD $@"
$CMD $@
